<%= form_tag("/person_default_payments/#{payment_type.default_payment_person(person).id}", 
    method: "PUT", remote: true) do %>
  <%= text_field_tag(:amount, payment_type.default_payment_person(person).amount, 
    type: "number", min: 0.1, step:'any', autocomplete:'off', class:'number') %>
  <%= submit_tag(t(:update), class: "btn btn-small btn-medium btn-primary") %>
<% end %>