<%= render partial: 'shared/header_index', 
	locals:{ title: t('.list'),  path:new_guest_path, search: @search,
	xlsx_download_path: guests_path(format: "xlsx") } %>

<%= render partial: 'guest_search', 
	locals:{ search: @search} %>	

<%= will_paginate %>
<table class='table-bordered tabletable-hover table-index'>
  <thead>
    <tr>
      <th class='td_holder medium-size-td  module-link'><%=  t(:name) %></th>
      <th class='td_holder medium-size-td'><%= t('people.form.family_name')%></th>
      <th class='td_holder medium-size-td'><%=  t('activerecord.attributes.person.gender') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.phone_mob') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.email') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.address') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.language_id') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.event_description') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.event_date') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.comments') %></th>
      <th class='td_holder mm-size-td'><%=  t('activerecord.attributes.person.visitor_status') %></th>
    </tr>
  </thead>

  <tbody  class="tbody_guests">
  	<%= render partial: 'guest' , collection: @guests, as: :person  %>
  </tbody>
</table>


<%= will_paginate %>
