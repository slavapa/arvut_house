<% if @payment.is_perosn_ext_exists?(person) %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>"
		id="tr_for_person_id_<%= person.id %>">
		<td class='td_left'>
			<% if person.email.present?%>
				<%= gravatar_for person, size: 32 %>
			<% end %>		
		</td>
		<td class='td_holder field  medium-size-td  module-link'>
			<%= person.name %>
		</td>
		<td class='td_holder field  medium-size-td'>
			<%= person.family_name %>		
		</td>	
		<td class='td_holder field  medium-size-td'>
			<%= person.status_name %>
		</td>
		<td class='td_holder medium-size-td'>
			<%= person.area %>		
		</td>
		<td class='td_holder medium-size-td'>
			<%= person.department %>		
		</td>	
		<td class='td-img-holder ss-size-td' id="td_present_person_<%= person.id %>" >
			<%= image_tag("vicon.gif") %>
		</td>
	  	<td class='td_holder form_holder'>
		  	<% if current_user.admin?%>
			  	<%= render partial: "remove_person_form", 
					locals: {payment: @payment, person: person} %>
		  	<% end %>
	  	</td>
		<td class='td_holder medium-size-td'>
			<%= form_tag("/person_payments/#{person.person_payments_id}", method: "PUT") do %>
			  <%= text_field_tag(:amount, number_with_precision(person.amount, precision: 2), type: "number", min: 0.1, 
			  step:'any', autocomplete:'off', class:'number') %>
			  <%= submit_tag("Update", class: "btn btn-small btn-medium") %>
			<% end %>
			<%= person.amount %>
			<%= person.person_payments_id %>	
		</td>
	</tr>
<% else %>
	<tr class="<%= cycle('list_line_odd', 'list_line_even') %>"
		id="tr_for_person_id_<%= person.id %>">
		<td class='td_left'>
			<% if person.email.present?%>
				<%= gravatar_for person, size: 32 %>
			<% end %>		
		</td>
		<td class='td_holder field  medium-size-td  module-link'>
			<%= person.name %>
		</td>
		<td class='td_holder field  medium-size-td'>
			<%= person.family_name %>		
		</td>	
		<td class='td_holder field  medium-size-td'>
			<%= person.status_name %>
		</td>
		<td class='td_holder medium-size-td'>
			<%= person.area %>		
		</td>
		<td class='td_holder medium-size-td'>
			<%= person.department %>		
		</td>	
		<td class='td-img-holder ss-size-td' id="td_present_person_<%= person.id %>" >
			&nbsp;
		</td>
	  	<td class='td_holder form_holder'>
		  	<% if current_user.admin?%>
			  	<%= render partial: "add_person_form", 
					locals: {payment: @payment, person: person} %>
		  	<% end %>
	  	</td>
		<td class='td_holder medium-size-td'>
			<%= person.amount %>		
		</td>
	</tr>
<% end %>

