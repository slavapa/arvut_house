<%= will_paginate @people %>
<table class='table-bordered tabletable-hover table-index'>
  <thead>
    <tr>
      <th class='td_left '></th>
      <th class='td_holder field  medium-size-td'><%= t(:name)%></th>
      <th class='td_holder field  medium-size-td'><%= t('people.form.family_name')%></th>
      <th class='td_holder field  medium-size-td'><%=  t('activerecord.attributes.person.status') %></th>
      <th class='td_holder medium-size-td'><%=  t('activerecord.attributes.person.area') %></th>
      <th class='td-img-holder ss-size-td'><%=  t('payments.edit.paid') %></th>
      <th class="btn_holder ss-size-td">#</th>
      <th class="btn_holder"><%=  t('activerecord.attributes.payment_type.amount') %></th>
