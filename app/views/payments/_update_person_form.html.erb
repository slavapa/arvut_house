<%= form_tag("/person_payments/#{person.person_payments_id}", method: "PUT", remote: true) do %>
  
  <% if payment.is_person_amount_less_than_default(person, person.amount) %>
    <%= text_field_tag(:amount, number_with_precision(person.amount, precision: 2), type: "number", min: 0.1, 
    step:'any', autocomplete:'off', class:'number in-duty') %>
  <% else %>
    <%= text_field_tag(:amount, number_with_precision(person.amount, precision: 2), type: "number", min: 0.1, 
    step:'any', autocomplete:'off', class:'number') %>
  <% end %>
  
  <%= submit_tag(t(:update), class: "btn btn-small btn-medium btn-primary") %>
<% end %>